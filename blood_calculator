def interface():
    print("My Program")
    print("Options:")
    keep_running = True
    while keep_running:
        print("9 - Quit")
        print("1 - Start Program")
        choice = input("Enter your choice: ")
        if choice=='9':
            return
        elif choice=='1':
            driver()
       



def inputfunction():
    HDL_input = input('Enter HDL value:')
    LDL_input = input('Enter LDL value:')
    return int(HDL_input), int(LDL_input)





def check(HDL_number):
    if HDL_number>=60:
        return "Normal"
    elif HDL_number>=40 and HDL_number<60:
        return "Borderline Low"
    else:
        return "Low"

def checkLDL(LDL_number):
    if LDL_number<130:
        return "Normal"
    elif LDL_number>=130 and LDL_number<159:
        return "Borderline High"
    elif 160<=LDL_number<=189:
        return 'High'
    else:
        return "Very High"
    
   


def driver():
    (HDL_number,LDL_number) = inputfunction()
    answerHDL = check(HDL_number)
    #print(answerHDL)
    answerLDL = checkLDL(LDL_number)
    #print(answerLDL)
    output_result(HDL_number,answerHDL,LDL_number,answerLDL)

def output_result(HDL_number,answerHDL,LDL_number,answerLDL):
    print(f"The results for an HDL value of {HDL_number} are {answerHDL}")
    print(f"The results for an LDL value of {LDL_number} are {answerLDL}")
  


interface()


